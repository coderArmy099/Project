<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>

<BorderPane fx:id="rootPane" prefHeight="700.0" prefWidth="1000.0" styleClass="root-pane" stylesheets="@../../../stylesheets/Rooms.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.DashboardController">

   <center>
      <StackPane fx:id="rootStack">
         <VBox spacing="10" styleClass="main-content-vbox">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>


            <HBox fx:id="userInfoBox" alignment="CENTER_LEFT" fillHeight="false" maxHeight="360.0" minHeight="56.0" prefHeight="203.0" prefWidth="892.0" styleClass="task-list" VBox.vgrow="NEVER">
               <padding>
                  <Insets bottom="25.0" left="30.0" right="30.0" top="25.0" />
               </padding>

               <!-- User Avatar Circle -->
               <FontIcon iconLiteral="fas-user-circle" styleClass="user-avatar-large">
                  <HBox.margin>
                     <Insets left="25.0" right="10.0" />
                  </HBox.margin>
               </FontIcon>

               <!-- User Info VBox -->
               <VBox spacing="6" HBox.hgrow="NEVER">
                  <HBox.margin>
                     <Insets left="10.0" right="20.0" />
                  </HBox.margin>
                  <Label fx:id="usernameLabel" styleClass="username-display" text="Username" />
                  <Label fx:id="schoolLabel" styleClass="school-display" text="School" />
               </VBox>

               <!-- Spacer -->
               <Region HBox.hgrow="ALWAYS" />

               <!-- Logout Button -->
               <Button fx:id="logoutBtn" maxHeight="55.0" maxWidth="100.0" minHeight="55.0" minWidth="100.0" onAction="#handleLogout" prefHeight="55.0" prefWidth="100.0" styleClass="back-btn" text="Logout">
                  <HBox.margin>
                     <Insets left="35.0" right="35.0" />
                  </HBox.margin>
                  <font>
                     <Font name="ArtifaktElement-Black" size="18.0" />
                  </font>
               </Button>
            </HBox>
            <VBox alignment="CENTER" prefHeight="562.0" prefWidth="892.0" styleClass="task-list" VBox.vgrow="ALWAYS" />

         </VBox>

      </StackPane>
   </center>

   <left>
      <VBox fx:id="navPane" alignment="CENTER" spacing="18" styleClass="nav-pane">
         <Button fx:id="dashboardBtn" onAction="#goToDashboard" styleClass="nav-button">
            <graphic>
               <FontIcon iconLiteral="fas-home" styleClass="nav-icon" />
            </graphic>
         </Button>
         <Button fx:id="courseTrackerNavBtn" onAction="#goToCourseTracker" styleClass="nav-button">
            <graphic>
               <FontIcon iconLiteral="fas-book" styleClass="nav-icon" />
            </graphic>
         </Button>
         <!-- Calendar Button -->
         <Button fx:id="calendarBtn" onAction="#goToCalendar" styleClass="nav-button">
            <graphic>
               <FontIcon iconLiteral="fas-calendar" selectionEnd="0" styleClass="nav-icon" />
            </graphic>
         </Button>

         <!-- Timer Button -->
         <Button fx:id="timerBtn" onAction="#goToStudyTimer" styleClass="nav-button">
            <graphic>
               <FontIcon iconLiteral="fas-stopwatch" styleClass="nav-icon" />
            </graphic>
         </Button>

         <!-- Community/Study Together Button -->
         <Button fx:id="communityBtn" onAction="#goToCommunity" styleClass="nav-button">
            <graphic>
               <FontIcon iconLiteral="fas-users" styleClass="nav-icon" />
            </graphic>
         </Button>
      </VBox>
   </left>

</BorderPane>
