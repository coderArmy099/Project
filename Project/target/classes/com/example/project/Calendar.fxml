<BorderPane fx:id="rootPane" prefHeight="700.0" prefWidth="1000.0" styleClass="root-pane" stylesheets="@../../../stylesheets/Calendar.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.CalendarController">

    <center>
        <VBox spacing="10" styleClass="main-content-vbox">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
           <HBox alignment="CENTER_LEFT" spacing="6" styleClass="top-bar">
               <padding>
               <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
   
               <!-- spacer pushes the cog to the right -->
               <Pane HBox.hgrow="ALWAYS">
               <children>
         
                     <!-- year (teal/bold) -->
                     <Label fx:id="yearLabel" layoutX="427.0" layoutY="-3.0" styleClass="year-label" text="hjmh" />
         
                     <!-- month (white/bold) -->
                     <Label fx:id="monthLabel" layoutX="375.0" layoutY="-3.0" styleClass="month-label" text="sdf" />
               </children>
            </Pane>
   
               <Label styleClass="top-button" text="⚙" />
           </HBox>

<!--            <HBox alignment="CENTER" prefHeight="67.0" prefWidth="892.0" style="-fx-background-color: #333;">-->
